.data
array: .word 1,2,3,4,5
dim: .word 10
somma: .word 0 # dove viene raccolto il risultato

.text

main: 
    la $a0, array
    li $a1, 5

      
    jal somma_arr

    sw $v0, somma

    li $v0, 10
    syscall

somma_arr:
    move $t0, $a0 # t0 è l'array
    move $s0, $a1 # t1 è l'indice massimo

    move $t3, $zero 
    move $t2, $zero
loop: 
    lw $t4, 0($t0)
    add $t3, $t3, $t4
    addi $t2, $t2, 1 # l'indice incrementa
    addi $t0, $t0, 4 # l'array punta all'elemento successivo
    blt $t2, $t5, loop
   
    move $v0, $t3
    jr $ra
